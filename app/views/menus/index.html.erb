            <% end %>
            <% @count2 = 0 %>
            <% @flag2 = false  %>
          <% end %>
        <% end %>
        <tr>
          <td></td>
          <td class="font-weight-bold">合計（税込）</td>
          <td class="font-weight-bold"><%= @total2 %></td>
        </tr>
        </tbody>
      </table>
