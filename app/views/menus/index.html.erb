  <!-- About Section-->
  <section class="page-section bg-primary text-white mb-0" id="cart">
    <div class="container">
      <!-- About Section Heading-->
      <h2 class="page-section-heading text-center text-uppercase text-white">カート</h2>
      <!-- Icon Divider-->
      <div class="divider-custom divider-light">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
      </div>

      <table class="table text-white">
        <thead>
        <tr>
          <th>メニュー</th>
          <th>個数</th>
          <th>金額</th>
        </tr>
        </thead>
        <tbody>
        <% @cart_menu.each do |cart_menu| %>
          <% @cart_user_menu.each do |cart_user_menu| %>
            <% if cart_user_menu.menu_id == cart_menu.id and cart_user_menu.status == 0%>
              <% @name1 = cart_menu.name %>
              <% @count1 += 1  %>
              <% @price1 = cart_menu.price%>
              <% @flag1 = true  %>
            <% end %>
          <% end %>
          <% if @flag1 %>
            <tr>
              <td><%= @name1 %></td>
              <td><%= @count1 %></td>
              <td><%= @price1 * @count1 %></td>
              <% @total1 += @price1 * @count1 %>
            </tr>
          <% end %>
          <% @count1 = 0 %>
          <% @flag1 = false  %>
        <% end %>
        <tr>
          <td></td>
          <td class="font-weight-bold">合計（税込）</td>
          <td class="font-weight-bold"><%= @total1 %></td>
        </tr>
        </tbody>
      </table>

