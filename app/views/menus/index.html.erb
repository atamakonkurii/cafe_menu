        </tr>
        </thead>
        <tbody>
        <% @cart_menu.each do |order_menu| %>
          <% if @order_user_menu %>
            <% @order_user_menu.each do |order_user_menu| %>
              <% if order_user_menu.menu_id == order_menu.id%>
                <%if order_user_menu.status == 1%>
                <% @name2 = order_menu.name %>
                <% @count2 += 1  %>
                <% @price2 = order_menu.price%>
                <% @flag2 = true  %>
                <% end %>
              <% end %>
            <% end %>
            <% if @flag2 %>
              <tr>
                <td><%= @name2 %></td>
                <td><%= @count2 %></td>
                <td><%= @price2 * @count2 %></td>
                <% @total2 += @price2 * @count2 %>
